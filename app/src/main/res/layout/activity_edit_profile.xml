<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bgedit"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="160dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_EditProfile"
            android:elevation="6dp"
            android:scaleType="centerCrop"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFFFFF"
            android:src="@drawable/ic_person"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:gravity="center|right"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:hintTextColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite">

            <EditText
                android:id="@+id/et_emailEdit"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:defaultFocusHighlightEnabled="true"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="@color/colorWhite">

            <EditText
                android:id="@+id/et_namaEdit"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:hint="Nama Lengkap"
                android:inputType="text"
                android:textColor="@color/colorWhite"

                android:textColorHint="@color/colorWhite"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="false">

                <EditText
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:editable="false"
                    android:inputType="none"
                    android:text="+62"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorHint="@color/colorWhite">

                <EditText
                    android:id="@+id/et_noHPEdit"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="No HP"
                    android:inputType="number"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorWhite"

                    android:textSize="12dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:layout_marginHorizontal="20dp">

        <Button
            android:id="@+id/btn_EditPassword"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:background="@null"
            android:elevation="7dp"
            android:text="@string/Password"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:gravity="right">
        <Button
            android:id="@+id/btn_Edit"
            android:layout_marginTop="170dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:elevation="7dp"
            android:text="Simpan"
            android:background="@drawable/rounded"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="bottom">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_kembaliEdit"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:backgroundTint="#0A767A">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>