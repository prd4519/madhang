<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#34000000"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="25dp"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:lottie_rawRes="@raw/delete"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginVertical="10dp"
            />
        <TextView
            android:id="@+id/txt_delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apakah anda ingin menghapus ... dari menu ?"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/btnDialogBatalDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_verification"
                android:text="Batal"
                android:elevation="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_marginVertical="5dp"
                android:textColor="@color/ColorButton"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/btnDialogDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_verification"
                android:layout_marginHorizontal="10dp"
                android:text="Ok"
                android:layout_weight="1"
                android:elevation="0dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/ColorButton"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>